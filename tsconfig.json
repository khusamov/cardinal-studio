{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "removeComments": false,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],

    "typeRoots": [
        "node_modules/@types"
    ],
    "paths": {
      "cardinal-studio": ["./index"]
    }
  },
  "exclude": [
    "node_modules",
    "temp",
    "dist",
    "client",
    "server2",
    "server1",
    "server_old"
  ]
}